<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DateActivity" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editText_d1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText_d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView_b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/separador_data"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editText_m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/green"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText_m2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/green"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/separador_data"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editText_y1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/orange"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText_y2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/orange"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText_y3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/orange"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText_y4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/orange"
            android:ems="10"
            android:inputType="number" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/button_1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/botao_1" />

        <Button
            android:id="@+id/button_2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/botao_2" />

        <Button
            android:id="@+id/button_3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/botao_3" />

        <Button
            android:id="@+id/button_min1m"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/month_button"
            android:text="@string/botao_menos_1m" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/button_4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="@string/botao_4" />

        <Button
            android:id="@+id/button_5"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="@string/botao_5" />

        <Button
            android:id="@+id/button_6"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="@string/botao_6" />

        <Button
            android:id="@+id/button_plus1m"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/month_button"
            android:text="@string/botao_mais_1m" />
    </TableRow>

   <TableRow
       android:id="@+id/tableRow4"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_horizontal" >

       <Button
           android:id="@+id/button_7"
           style="?android:attr/buttonStyleSmall"
           android:layout_width="0dp"
           android:layout_height="45dp"
           android:layout_weight="1"
           android:text="@string/botao_7" />

       <Button
           android:id="@+id/button_8"
           style="?android:attr/buttonStyleSmall"
           android:layout_width="0dp"
           android:layout_height="45dp"
           android:layout_weight="1"
           android:text="@string/botao_8" />

       <Button
           android:id="@+id/button_9"
           style="?android:attr/buttonStyleSmall"
           android:layout_width="0dp"
           android:layout_height="45dp"
           android:layout_weight="1"
           android:text="@string/botao_9" />

       <Button
           android:id="@+id/button_min1a"
           style="?android:attr/buttonStyleSmall"
           android:layout_width="0dp"
           android:layout_height="45dp"
           android:layout_weight="1"
           android:background="@drawable/year_button"
           android:text="@string/botao_menos_1a" />
   </TableRow>

   <TableRow
       android:id="@+id/tableRow5"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_horizontal" >
       
          <Button
                android:id="@+id/button_min1d"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
    	        android:layout_height="45dp"
	            android:layout_weight="1"
                android:background="@drawable/day_button"
                android:text="@string/botao_menos_1d" />

            <Button
                android:id="@+id/button_0"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
    	        android:layout_height="45dp"
	            android:layout_weight="1"
                android:text="@string/botao_0" />

            <Button
                android:id="@+id/button_plus1d"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
    	        android:layout_height="45dp"
	            android:layout_weight="1"
                android:background="@drawable/day_button"
                android:text="@string/botao_mais_1d" />

            <Button
                android:id="@+id/button_plus1a"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
    	        android:layout_height="45dp"
	            android:layout_weight="1"
                android:background="@drawable/year_button"
                android:text="@string/botao_mais_1a" />
       
   </TableRow>

   <TableRow
       android:id="@+id/tableRow6"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >
            
               <Button
            android:id="@+id/button17"
            style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
    	        android:layout_height="45dp"
	            android:layout_weight="1"
            android:text="@string/botao_ok"
            android:top="55dp" />
       
       
       
   </TableRow>

</TableLayout>